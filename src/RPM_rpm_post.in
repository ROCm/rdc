#!/bin/bash

do_create_rdc_user() {
    useradd -r -s /bin/nologin rdc
    if [ $(getent group render) ]; then
        usermod -a -G render rdc
    else
        usermod -a -G video rdc
    fi

    # Make sure this doesn't return non-zero if an id already exists
    return 0
}

reload_systemd() {
    systemctl daemon-reload
    return 0
}
do_create_rdc_user

#Symlink RDC Service
ln -s -f -r /@RDC_CLIENT_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBEXECDIR@/rdc/rdc.service @DISTRO_ROOT@/rdc.service

#Request systemctl to reload file since RDC is adding new file/service
reload_systemd
