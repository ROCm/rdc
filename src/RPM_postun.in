stop_rdc() {
    #stop RDC if running
    systemctl stop rdc
    return 0
}

reload_systemd() {
    systemctl daemon-reload
    return 0
}

if [ $1 -le 1 ]; then
    # perform the below actions for rpm remove($1=0) or upgrade($1=1) operations
    stop_rdc
    unlink @DISTRO_ROOT@/rdc.service
    reload_systemd
fi
